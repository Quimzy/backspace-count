{
    "manifest_version": 3,
    "name": "FFFFUUUUU",
    "version": "1.0",
    "icons": {
        "16": "assets/icon-16.ico",
        "32": "assets/icon-32.ico",
        "48": "assets/icon-48.ico",
        "128": "assets/icon-128.ico"
    },

    "permissions": [
        "storage"
    ],

    "background": {
        "service_worker": "background.js"
    },
    
    "content_scripts": [{
        "js": ["content.js"],
        "matches": ["*://*/*"]
    }],

    "action": {
        "default_popup": "popup.html"
    }
}